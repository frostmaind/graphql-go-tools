directive @hasRole(role: Role!) on FIELD_DEFINITION | OBJECT

enum Role {
    GUEST
    ADMIN
    USER
}

extend type Query {
    topProducts(first: Int = 5): [Product] @hasRole(role: GUEST)
}

extend type Subscription {
    updatedPrice: Product!
    updateProductPrice(upc: String!): Product!
    stock: [Product!]
}

type Product @key(fields: "upc") {
    upc: String!
    name: String!
    price: Int!
    inStock: Int!
}